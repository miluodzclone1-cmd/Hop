-- Script dành cho Auto-execute (Client-side)
local Player = game:GetService("Players").LocalPlayer

local function StartLoop()
    -- Kết nối với sự kiện CharacterAdded để mỗi khi hồi sinh là... "tạch" tiếp
    Player.CharacterAdded:Connect(function(Character)
        local Humanoid = Character:WaitForChild("Humanoid", 5)
        if Humanoid then
            task.wait(0.1) -- Một khoảng chờ cực ngắn để đảm bảo script nhận diện được nhân vật
            Humanoid.Health = 0
        end
    end)

    -- Nếu nhân vật đã hiện diện sẵn khi chạy script, cho "tạch" luôn
    if Player.Character then
        local Humanoid = Player.Character:FindFirstChildOfClass("Humanoid")
        if Humanoid then Humanoid.Health = 0 end
    end
end

-- Chạy hàm chính
StartLoop()
